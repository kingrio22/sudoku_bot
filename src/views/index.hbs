              let value; 
              if(cells[i*9+j].firstElementChild){
                counter++; 
                value = parseInt(cells[i*9+j].firstChild.value); 
                if(!isNaN(value)){
                  console.log("in if", value); 
                  changedCell.row = i;
                  changedCell.col = j;  
                }
              }else{
